{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": [
		"prettier-plugin-svelte",
		"@ianvs/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	],
	"importOrder": [
		"<BUILTIN_MODULES>",
		"",
		"^\\~icons",
		"",
		"^\\$env",
		"",
		"^\\$app",
		"",
		"^\\$lib",
		"",
		"^\\$components",
		"",
		"^\\$i18n",
		"",
		"^\\$server",
		"",
		"^[./]"
	],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
